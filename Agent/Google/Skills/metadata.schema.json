{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Skill Metadata Schema",
    "description": "Schema for skill metadata.json files enabling discovery and categorization",
    "type": "object",
    "required": [
        "name",
        "version",
        "description",
        "category"
    ],
    "properties": {
        "name": {
            "type": "string",
            "description": "Unique identifier for the skill (lowercase, hyphenated)",
            "pattern": "^[a-z][a-z0-9-]*$",
            "examples": [
                "frontend-architect",
                "api-builder"
            ]
        },
        "version": {
            "type": "string",
            "description": "Semantic version of the skill",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "examples": [
                "1.0.0",
                "2.1.0"
            ]
        },
        "description": {
            "type": "string",
            "description": "Brief description of what this skill does",
            "maxLength": 200
        },
        "category": {
            "type": "string",
            "description": "Primary category for organization",
            "enum": [
                "development",
                "architecture",
                "testing",
                "documentation",
                "security",
                "devops",
                "research",
                "productivity"
            ]
        },
        "keywords": {
            "type": "array",
            "description": "Search keywords for discoverability",
            "items": {
                "type": "string"
            },
            "maxItems": 10
        },
        "triggers": {
            "type": "array",
            "description": "Natural language phrases that activate this skill",
            "items": {
                "type": "string"
            }
        },
        "recommended_mcp": {
            "type": "array",
            "description": "MCP servers this skill works best with",
            "items": {
                "type": "string"
            }
        },
        "related_skills": {
            "type": "array",
            "description": "Other skills that complement this one",
            "items": {
                "type": "string"
            }
        },
        "related_workflows": {
            "type": "array",
            "description": "Workflows that use this skill",
            "items": {
                "type": "string",
                "pattern": "^/[a-z-]+$"
            }
        },
        "author": {
            "type": "string",
            "description": "Author or maintainer of the skill"
        },
        "license": {
            "type": "string",
            "description": "License for the skill",
            "default": "MIT"
        },
        "dateCreated": {
            "type": "string",
            "format": "date",
            "description": "Date the skill was created"
        },
        "dateModified": {
            "type": "string",
            "format": "date",
            "description": "Date the skill was last modified"
        }
    },
    "additionalProperties": false
}